# Configuración de Flask
FLASK_SECRET_KEY=clave_secreta_super_segura_para_desarrollo

# Configuración de Google OAuth
# Obtén estas credenciales en: https://console.cloud.google.com/
# 1. Crea un proyecto
# 2. Habilita Google+ API
# 3. Ve a "Credenciales" > "Crear credenciales" > "ID de cliente OAuth 2.0"
# 4. Configura URIs:
#    - Origen autorizado: http://localhost:5000
#    - URI de redirección: http://localhost:5000/auth/google/callback

GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui

# Configuración de Google Custom Search (opcional)
GOOGLE_API_KEY=tu_google_api_key_aqui
GOOGLE_CX=tu_google_cx_aqui

# Configuración de la aplicación
FLASK_ENV=development
FLASK_DEBUG=True